<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .user-icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-left: 15px;
        }

        .register-link {
            color: white;
            text-decoration: none;
            margin-left: 10px;
        }

        .container {
            display: inline;
            min-height: 10vh;
            margin: 0;
            padding: 0;
        }

        .image-section {
            flex: 1;
            background: url('https://source.unsplash.com/600x800/?nature,water') center/cover no-repeat;
        }

        .form-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .form-container {
            width: 100%;
            max-width: 400px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .footer {
            min-height: 10vh;
            background-color: #343a40;
            color: white;
            padding: 1rem;
            text-align: center;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

        .footer a {
            color: white;
            margin: 0 10px;
        }

        .bg-custom {
            background-color: #343a40 !important;
        }

        .btn-custom {
            background-color: #343a40;
            border: none;
        }

        .btn-custom:hover {
            background-color: #292b2c;
        }
    </style>
    <script>
        // Buni sahifaga yuklagandan so'ng chaqiramiz
        function showSuccessMessage() {
            // Agar muvaffaqiyatli ro'yxatdan o'tgan bo'lsa
            const successMessage = "<%= message %>";
            if (successMessage) {
                alert(successMessage);
                window.location.href = '/api/v1/main'; // Asosiy sahifaga yo'naltirish
            }
        }
    </script>
</head>

<body onload="showSuccessMessage()">

    <!-- Header -->
    <header class="bg-custom text-white p-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo h3"><span class="text-warning">All Receipts</span></div>
            <nav>
                <ul class="nav">
                    <li class="nav-item">
                        <div class="user-section">
                            <!-- Signin linki -->
                            <a href="/api/v1/auth/login" class="register-link"><i class="fas fa-user user-icon"></i>login</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Register Form -->
    <section class="container">
        <div class="image-section"></div>
        <div class="form-section">
            <div class="form-container">
                <h2 class="text-center mb-4">Signin</h2>
                <form action="/api/v1/auth/register" method="POST">
                    <div class="mb-3">
                        <input type="text" name="name" class="form-control" placeholder="Ismingiz" required>
                    </div>
                    <div class="mb-3">
                        <input type="email" name="email" class="form-control" placeholder="Email" required>
                    </div>
                    <div class="mb-3">
                        <input type="text" name="phone" class="form-control" placeholder="Telefon raqamingiz" required>
                    </div>
                    <div class="mb-3">
                        <input type="text" name="password" class="form-control" placeholder="Parolingiz" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-custom text-white">Signin</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <script>
        // Buni sahifaga yuklagandan so'ng chaqiramiz
        window.onload = function() {
            const successMessage = "<%= message %>";
            if (successMessage) {
                alert(successMessage);
                window.location.href = '/api/v1/main'; // Asosiy sahifaga yo'naltirish
            }
        }
    </script>
</body>

</html>
